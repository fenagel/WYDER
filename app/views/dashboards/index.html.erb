<% content_for (:html_title), "#{@user.name} ¬∑ Wyder" %>
<div class="container">

        <!-- FILTERS DIV DROPDWONS -->

        <h5 id="counter">
          <% if @user.bookmarks.count == 0 %>
            <%= "Hey #{@user.name}, you don't have any bookmarked videos yet üò¶" %>
          <% elsif @bookmarks.count == 1 %>
            <%= "Hey #{@user.name}, you have 1 bookmarked video üìπ" %>
          <% else @user.bookmarks.count %>
            <%= "Hey #{@user.name}, you have #{@user.bookmarks.count} bookmarked videos üìπ" %>
          <% end %>
        </h5>

      <div class="all-videos p-5">
        <div class="filter-div">
          <h4 id="filter-text">Filter your results<i class="fas fa-search"></i></h4>

          <!-- Div for all the videos/filtered if click on buttons -->
            <div class="buttons">
              <div class="bottom">
                <% if @bookmarked_programs.count > 3 %>
                  <%= link_to @bookmarked_programs.first.subject.name, dashboards_path(subject_name: @bookmarked_programs.first.subject.name), class: "btn-filter"%>
                <% end %>

                <% if @bookmarked_programs.count > 3 %>
                  <%= link_to @bookmarked_programs.second.university.location, dashboards_path(university_location: @bookmarked_programs.second.university.location), class: "btn-filter" %>
                <% end %>

                <% if @bookmarked_programs.count > 4 && @bookmarked_programs.third.subject.name != @bookmarked_programs.first.subject.name %>
                  <%= link_to @bookmarked_programs.third.subject.name, dashboards_path(subject_name: @bookmarked_programs.third.subject.name), class: "btn-filter" %>
                <% end %>

                <% if @bookmarked_programs.count > 6 && @bookmarked_programs.fourth.subject.name != @bookmarked_programs.third.subject.name %>
                  <%= link_to @bookmarked_programs.fourth.subject.name, dashboards_path(subject_name: @bookmarked_programs.fourth.subject.name), class: "btn-filter"%>
                <% end %>

                <% if @bookmarked_programs.count > 8 && @bookmarked_programs.fifth.university.location != @bookmarked_programs.second.university.location %>
                  <%= link_to @bookmarked_programs.fifth.university.location, dashboards_path(university_location: @bookmarked_programs.fifth.university.location), class: "btn-filter" %>
                <% end %>

                <% if @bookmarked_programs.count > 9 && @bookmarked_programs.second.subject.name != @bookmarked_programs.fourth.subject.name %>
                  <%= link_to @bookmarked_programs.second.subject.name, dashboards_path(subject_name: @bookmarked_programs.second.subject.name), class: "btn-filter" %>
                <% end %>
              </div>

              <div class="top">
                <%= link_to "Show all", dashboards_path(all_programs: "all videos"), class: "btn-search-all"%>
              </div>

            </div>

           </div>

        <div class="cards col-9">
          <%= render partial: "/shared/card", locals: { programs: @programs } %>
          <!-- <form>
            <label for="fname">This is your personal comment section ‚ò∫Ô∏è</label><br>
            <input type="text" id="fname" name="fname"><br>
          </form> -->
        </div>
      </div>
  </div>


