<div class="container mt-3">

        <!-- FILTERS DIV DROPDWONS -->

        <div class="filter-div">
          <h4 id="filter-text">FIND<i class="fas fa-search"></i></h4>

            <div class="buttons">
              <% if @bookmarked_programs.count > 0 %>
                <%= link_to @bookmarked_programs.first.subject.name, dashboards_path(subject_name: @bookmarked_programs.first.subject.name), class: "btn"%>
              <% end %>

              <% if @bookmarked_programs.count > 1 %>
                <%= link_to @bookmarked_programs.second.university.location, dashboards_path(university_location: @bookmarked_programs.second.university.location), class: "btn" %>
              <% end %>

              <% if @bookmarked_programs.count > 2 %>
                <%= link_to @bookmarked_programs.third.subject.name, dashboards_path(subject_name: @bookmarked_programs.third.subject.name), class: "btn" %>
              <% end %>

              <% if @bookmarked_programs.count > 3 %>
                <%= link_to @bookmarked_programs.fourth.subject.name, dashboards_path(subject_name: @bookmarked_programs.fourth.subject.name), class: "btn"%>
              <% end %>

              <% if @bookmarked_programs.count > 4 %>
                <%= link_to @bookmarked_programs.fifth.university.location, dashboards_path(university_location: @bookmarked_programs.fifth.university.location), class: "btn" %>
              <% end %>

              <% if @bookmarked_programs.count > 5 %>
                <%= link_to @bookmarked_programs.sixth.subject.name, dashboards_path(subject_name: @bookmarked_programs.sixth.subject.name), class: "btn" %>
              <% end %>

              <% if @bookmarked_programs.count > 6 %>
                <%= link_to @bookmarked_programs.seventh.university.location, dashboards_path(university_location: @bookmarked_programs.seventh.university.location), class: "btn"%>
              <% end %>

              <%= link_to "All Saved Videos", dashboards_path(all_programs: "all videos"), class: "btn"%>
            </div>

          </div>

        <!-- Div for all the videos/filtered if click on buttons -->

        <div class="col-sm-12 col-md-6 pt-5">
        <h5 id="counter">
          <% if @user.bookmarks.count == 0 %>
            <%= "You don't have any bookmarked videos ðŸ˜¦" %>
          <% elsif @bookmarks.count == 1 %>
            <%= "You have 1 bookmarked video ðŸ“¹" %>
          <% else @user.bookmarks.count %>
            <%= "You have #{@user.bookmarks.count} bookmarked videos ðŸ“¹" %>
          <% end %>
        </h5>
      </div>

        <div class="all-videos p-5">
        <div class="cards col-9" style="display: contents;">
          <%= render partial: "/shared/card", locals: { programs: @programs } %>
        </div>
      </div>
    </div>
</div>


